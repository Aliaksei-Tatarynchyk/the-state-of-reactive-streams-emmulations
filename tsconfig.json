{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "allowJs": false,
    "rootDir": "",
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ],
    "lib": [
      "es6",
      "scripthost",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "node_modules/**/*"
  ]
}